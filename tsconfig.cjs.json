{
  "compilerOptions": {
    "lib": [ "es2021", "es7", "es6", "dom", "dom.iterable" ],
    "module": "commonjs",
    
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,

    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es6",

    "noUnusedLocals": true,
    "baseUrl": ".",
    "outDir": "cjs/"
  },
  "include": [ "src/**/*.ts", "src/**/*.tsx" ],
  "exclude": [ "dist", "node_modules", "tests" ]
}