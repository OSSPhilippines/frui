{
  "type": "module",
  "name": "frui",
  "version": "0.1.8",
  "license": "MIT",
  "description": "A collection of vanilla react components written in typescript.",
  "author": "Chris <chris@incept.asia>",
  "homepage": "https://github.com/OSSPhilippines/frui",
  "bugs": "https://github.com/OSSPhilippines/frui/issues",
  "repository": "OSSPhilippines/frui",
  "main": "./cjs/index.js",
  "module": "./esm/index.js",
  "types": "./cjs/index.d.ts",
  "exports": {
    ".": {
      "require": "./cjs/index.js",
      "import": "./esm/index.js"
    },
    "./types": {
      "require": "./cjs/types.js",
      "import": "./esm/types.js"
    },
    "./data/*": {
      "require": "./cjs/data/*.js",
      "import": "./esm/data/*.js"
    },
    "./form": {
      "require": "./cjs/form/index.js",
      "import": "./esm/form/index.js"
    },
    "./form/*": {
      "require": "./cjs/form/*.js",
      "import": "./esm/form/*.js"
    },
    "./view": {
      "require": "./cjs/view/index.js",
      "import": "./esm/view/index.js"
    },
    "./view/*": {
      "require": "./cjs/view/*.js",
      "import": "./esm/view/*.js"
    },
    "./Accordion": {
      "require": "./cjs/Accordion.js",
      "import": "./esm/Accordion.js"
    },
    "./Alert": {
      "require": "./cjs/Alert.js",
      "import": "./esm/Alert.js"
    },
    "./Badge": {
      "require": "./cjs/Badge.js",
      "import": "./esm/Badge.js"
    },
    "./Bread": {
      "require": "./cjs/Bread.js",
      "import": "./esm/Bread.js"
    },
    "./Button": {
      "require": "./cjs/Button.js",
      "import": "./esm/Button.js"
    },
    "./Dialog": {
      "require": "./cjs/Dialog.js",
      "import": "./esm/Dialog.js"
    },
    "./Dropdown": {
      "require": "./cjs/Dropdown.js",
      "import": "./esm/Dropdown.js"
    },
    "./Loader": {
      "require": "./cjs/Loader.js",
      "import": "./esm/Loader.js"
    },
    "./Notifier": {
      "require": "./cjs/Notifier.js",
      "import": "./esm/Notifier.js"
    },
    "./Pager": {
      "require": "./cjs/Pager.js",
      "import": "./esm/Pager.js"
    },
    "./Progress": {
      "require": "./cjs/Progress.js",
      "import": "./esm/Progress.js"
    },
    "./Table": {
      "require": "./cjs/Table.js",
      "import": "./esm/Table.js"
    },
    "./Tabs": {
      "require": "./cjs/Tabs.js",
      "import": "./esm/Tabs.js"
    },
    "./Tooltip": {
      "require": "./cjs/Tooltip.js",
      "import": "./esm/Tooltip.js"
    },
    "./When": {
      "require": "./cjs/When.js",
      "import": "./esm/When.js"
    },    
    "./frui.css": "./frui.css"
  },
  "typesVersions": {
    "*": {
      ".": [ "./cjs/index.d.ts" ],
      "types": [ "./cjs/types.d.ts" ],
      "data/*": [ "./cjs/data/*.d.ts" ],
      "form": [ "./cjs/form/index.d.ts" ],
      "form/*": [ "./cjs/form/*.d.ts" ],
      "Accordion": [ "./cjs/Accordion.d.ts" ],
      "Alert": [ "./cjs/Alert.d.ts" ],
      "Badge": [ "./cjs/Badge.d.ts" ],
      "Bread": [ "./cjs/Bread.d.ts" ],
      "Button": [ "./cjs/Button.d.ts" ],
      "Dialog": [ "./cjs/Dialog.d.ts" ],
      "Dropdown": [ "./cjs/Dropdown.d.ts" ],
      "Loader": [ "./cjs/Loader.d.ts" ],
      "Notifier": [ "./cjs/Notifier.d.ts" ],
      "Pager": [ "./cjs/Pager.d.ts" ],
      "Progress": [ "./cjs/Progress.d.ts" ],
      "Table": [ "./cjs/Table.d.ts" ],
      "Tabs": [ "./cjs/Tabs.d.ts" ],
      "Tooltip": [ "./cjs/Tooltip.d.ts" ],
      "When": [ "./cjs/When.d.ts" ]      
    }
  },
  "files": [
    "cjs",
    "esm",
    "styles",
    "frui.css",
    "LICENSE",
    "README.md"
  ],
  "plugins": [
    "./plugins/app/plugin",
    "./plugins/docs/plugin"
  ],
  "scripts": {
    "build": "yarn build:tsc && yarn build:pkg && yarn build:docs",
    "build:pkg": "yarn build:pkg:cjs && yarn build:pkg:esm",
    "build:pkg:cjs": "echo '{\"type\": \"commonjs\"}' > cjs/package.json",
    "build:pkg:esm": "echo '{\"type\": \"module\"}' > esm/package.json",
    "build:tsc": "yarn build:tsc:cjs && yarn build:tsc:esm",
    "build:tsc:cjs": "tsc -p ./tsconfig.cjs.json",
    "build:tsc:esm": "tsc -p ./tsconfig.esm.json",
    "build:docs": "tsx scripts/build.ts",
    "dev": "tsx scripts/develop.ts",
    "test": "vitest --config vitest.config.ts",
    "report": "vitest run --coverage"
  },
  "devDependencies": {
    "@codemirror/language-data": "6.5.1",
    "@stackpress/ingest": "0.6.2",
    "@testing-library/dom": "10.4.1",
    "@testing-library/react": "16.3.0",
    "@types/inputmask": "5.0.7",
    "@types/node": "24.3.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@vitejs/plugin-react": "5.0.2",
    "codemirror": "6.0.2",
    "inputmask": "5.0.9",
    "jsdom": "27.1.0",
    "markdown-to-jsx": "7.7.13",
    "moment": "2.30.1",
    "r22n": "1.0.10",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-shiki": "0.8.0",
    "react-toastify": "11.0.5",
    "reactus": "0.6.2",
    "tsx": "4.20.5",
    "typescript": "5.9.2",
    "universal-cookie": "8.0.1",
    "unocss": "66.5.1",
    "vite": "7.1.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.8"
  },
  "peerDependencies": {
    "react": "19.1.1",
    "react-dom": "19.1.1"
  },
  "dependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/user-event": "14.6.1"
  }
}
